<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClassroomAttendanceTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimary">@color/Cream</item>
        <item name="colorSecondary">@color/Navy</item>
        <item name="android:background">@color/Navy</item>
        <item name="colorPrimaryDark">@color/Navy</item>
        <item name="android:textColorPrimary">@color/Cream</item>
        <item name="android:textColorSecondary">@color/Navy</item>
    </style>

    <style name="Theme.ClassroomAttendanceTracker" parent="Base.Theme.ClassroomAttendanceTracker" >
        <item name="colorPrimary">@color/Cream</item>
        <item name="colorSecondary">@color/Navy</item>
        <item name="colorPrimaryDark">@color/Navy</item>
        <item name="android:textColorPrimary">@color/Cream</item>
        <item name="android:textColorSecondary">@color/Navy</item>
        <item name="colorAccent">@color/Cream</item>

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/Cream</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/Cream</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/Cream</item>
    </style>
</resources>