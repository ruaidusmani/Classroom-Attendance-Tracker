<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:textDirection="ltr"
    tools:context=".TeacherAddClass">


    <TimePicker
        android:id="@+id/time_picker_start"
        style="@android:style/Widget.Material.Light.TimePicker"
        android:layout_width="236dp"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:alwaysDrawnWithCache="false"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477" />

    <TimePicker
        android:id="@+id/time_picker_end"
        style="@android:style/Widget.Material.Light.TimePicker"
        android:layout_width="236dp"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:alwaysDrawnWithCache="false"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_days_group"
        android:layout_width="125dp"
        android:layout_height="354dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729">


        <com.google.android.material.chip.Chip
            android:id="@+id/monday_chip"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:checkable="true"
            android:text="Monday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.27" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tuesday_chip"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:checkable="true"
            android:text="Tuesday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.395" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wednesday_chip"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:checkable="true"
            android:text="Wednesday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516" />

        <com.google.android.material.chip.Chip
            android:id="@+id/thursday_chip"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:checkable="true"
            android:text="Thursday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.634" />

        <com.google.android.material.chip.Chip
            android:id="@+id/friday_chip"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:checkable="true"
            android:text="Friday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.756" />


    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/submit_class_teacher"
        android:layout_width="378dp"
        android:layout_height="70dp"
        android:background="#00FFFFFF"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <EditText
        android:id="@+id/subject_title"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:hint="Subject"
        android:inputType="textCapCharacters"
        android:maxLength="4"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <EditText
        android:id="@+id/course_number"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:layout_marginEnd="20dp"
        android:cursorVisible="false"
        android:hint="Number"
        android:inputType="text"
        android:maxLength="4"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <EditText
        android:id="@+id/room_number"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:cursorVisible="false"
        android:hint="Room"
        android:maxLength="10"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <View
        android:id="@+id/divider2"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <Spinner
        android:id="@+id/building_spinner"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="176dp"
        android:dropDownVerticalOffset="0dp"
        android:gravity="center"
        android:overlapAnchor="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/class_spinner"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="20dp"
        android:dropDownVerticalOffset="0dp"
        android:gravity="center"
        android:overlapAnchor="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>